{% extends 'layout.twig' %}

{% block title %}{{ parent() }} - {{ user.user_name }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 panel profile-header">
                <div class="avatar">
                    <img src="https://placehold.it/300x300" alt="Avatar" class="img-circle">
                </div>
                <div class="profile-info">
                    <h2>
                        {{ user.user_name }}
                        {% if auth.check %}
                            {% if auth.user.user_id == user.user_id %}
                                <a href="{{ path_for('edit.account') }}" class="btn btn-primary">Edit</a>
                            {% else %}
                                <a href="#" class="btn btn-primary">Follow</a>
                            {% endif %}
                        {% endif %}
                    </h2>
                    <ul class="list-unstyled list-inline">
                        <li><strong>82</strong> posts</li>
                        <li><strong>5483</strong> followers</li>
                        <li><strong>147</strong> following</li>
                    </ul>
                    <div class="profile-desc">
                        <span class="profile-name">Firstname</span>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 panel profile-photos">
                {% if count > 0 %}
                    <div class="row">
                        {% for picture in pictures %}
                            {# if loop.index0 % 3 == 0 %}<div class="photos-row">{% endif #}
                            <div class="col-xs-4 photo">
                                <img src="{{ base_url() }}/{{ picture.getWebPath() }}" alt="Photo">
                            </div>
                            {# if loop.index % 3 == 0 %}</div>{% endif #}
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-center">{{ user.user_name }} does not have any pictures yet</p>
                {% endif %}
            </div>
            {% if pages > 1 %}
                <div class="col-xs-12 text-center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% if page > 1 %}
                                <li>
                                    <a href="{{ path_for('user.profile', {'slug': user.user_slug}) }}?page={{ page - 1 }}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            {% else %}
                                <li class="disabled">
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            {% endif %}

                            {% for i in 1..pages %}
                                <li{% if page == i %} class="active"{% endif %}>
                                    <a href="{{ path_for('user.profile', {'slug': user.user_slug}) }}?page={{ i }}">
                                        {{ i }}
                                    </a>
                                </li>
                            {% endfor %}

                            {% if pages > page %}
                                <li>
                                    <a href="{{ path_for('user.profile', {'slug': user.user_slug}) }}?page={{ page + 1 }}" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            {% else %}
                                <li class="disabled">
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
